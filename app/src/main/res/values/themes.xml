<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StayFocused" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightModeAccent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/lightModeBg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightModeSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/lightModeSecondaryVariantColor</item>
        <item name="colorOnSecondary">@color/lightModeTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>